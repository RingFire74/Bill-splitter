<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/billsplitter5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="empty trip"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:id="@+id/t1"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:visibility="visible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Create a new trip "
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/create"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_style"
        android:id="@+id/b_trip"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Continue in the current trip "
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/proceed"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_style"
        android:id="@+id/b_start"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_style"
        android:id="@+id/b_contact" />


</LinearLayout>